<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:cardElevation="16dp"
        android:background="@color/materialPrimaryColor"
        app:cardBackgroundColor="@color/white"
        app:rippleColor="@color/materialPrimaryColor"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="30dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/materialPrimaryColor"
        app:cardCornerRadius="15dp"
        app:checkedIcon="@drawable/ic_baseline_favorite_24"
        app:checkedIconSize="26dp"
        app:checkedIconMargin="6dp"
        app:checkedIconTint="@color/white"
        app:checkedIconGravity="TOP_END"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/ImgCard"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/foodonline"
                android:scaleType="fitXY"
                android:contentDescription="@string/content_description_media"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lin1"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/titleCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />
                <TextView
                    android:id="@+id/subtitleCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Social Media App "
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    />


            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dividerLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerColor="@color/materialPrimaryColor"
                app:dividerThickness="1dp"
                app:dividerInsetEnd="14dp"
                app:dividerInsetStart="16dp" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHideCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hide"
                    app:rippleColor="@color/materialPrimaryColor"
                    style="?attr/borderlessButtonStyle"
                    android:textColor="@color/materialPrimaryColor"
                    />
                <Button
                    android:id="@+id/btnSHOWCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show"
                    app:rippleColor="@color/white"
                    android:elevation="7dp"
                    style="@style/MyButtonSHOWStyle"
                    android:backgroundTint="@color/materialPrimaryColor"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>